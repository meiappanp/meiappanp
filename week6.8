def find_pivot_index(arr):
    n = len(arr)
    left_sum = arr[0]
    right_sum = sum(arr[2:])
    for i in range(1, n - 1):
        if left_sum == right_sum:
            return i
        left_sum += arr[i]
        right_sum -= arr[i + 1]
    return -1

# Read input
n = int(input())
arr = [int(input()) for _ in range(n)]

# Find the pivot index
pivot_index = find_pivot_index(arr)
print(pivot_index)
